{
  "extends": "stylelint-config-recommended-scss",
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "order/order": [
      {
        "type": "at-rule",
        "name": "extend"
      },
      {
        "type": "at-rule",
        "name": "include",
        "parameter": "[^media]"
      },
      "declarations",
      {
        "type": "at-rule",
        "name": "include",
        "parameter": "media",
        "hasBlock": true
      }
    ],
    "order/properties-alphabetical-order": true
  }
}
